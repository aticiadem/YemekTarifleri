<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/arkaplan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.YemekDetayiFragment"
            android:background="@color/arkaplan"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/yemek_detay_image"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:maxWidth="300dp"
                android:maxHeight="250dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@color/beyaz" />

            <TextView
                android:id="@+id/yemek_detay_isim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yemek Adı"
                android:textColor="@color/siyah"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gerekli Malzemeler:"
                android:textColor="@color/siyah"
                android:textSize="22sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/yemek_detay_malzemeler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/siyah"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yapılışı:"
                android:textColor="@color/siyah"
                android:textSize="22sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/yemek_detay_yapilis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/siyah"
                android:textStyle="italic"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</layout>